{
  "manifest_version": 3,
  "name": "Enhancement Kit for Commishes",
  "version": "0.0.1",
  "description": "Add some generic enhancements for Commishes and it's subdomains.",
  "homepage_url": "https://voxelfox.co.uk",
  "icons": {
    "128": "icons/ghost.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.commishes.com/*"
      ],
      "js": [
        "lib/helpers.js",
        "lib/ych-category.js",
        "lib/ych-auction.js",
        "ek4c.js"
      ]
    }
  ],
  "action": {
    "default_title": "EK4C Options",
    "default_popup": "options.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://ych.commishes.com/",
    "https://ping.commishes.com/",
    "https://loot.commishes.com/",
    "https://portfolio.commishes.com/"
  ],
  "browser_specific_settings": {
    "gecko": {
        "id": "ek4c@voxelfox.co.uk"
    }
  }
}